<h2>horizontal-list-swiper/sly</h2>

<div class="container-fluid">

  <h4>Scroll to change the dates</h4>
  <h3>Default</h3>

  <div class="row mb8">
    {{#horizontal-list-swiper/sly
      itemsUpdate=model
      as |item itemIndex|
    }}
      <div class="scroll-header-sly">
        {{item}}
      </div>
    {{/horizontal-list-swiper/sly}}
  </div>

  <h3>Centered</h3>

  <div class="row mb8">
    {{#horizontal-list-swiper/sly
      active-item-alignment="centered"
      itemsUpdate=model
      as |item itemIndex|
    }}
      <div class="scroll-header-sly">
        {{item}}
      </div>
    {{/horizontal-list-swiper/sly}}
  </div>

  <h3>Stiff</h3>

  <div class="row mb8">
    {{#horizontal-list-swiper/sly
      active-item-alignment="centered"
      stiffness=0.2
      itemsUpdate=model
      as |item itemIndex|
    }}
      <div class="scroll-header-sly">
        {{item}}
      </div>
    {{/horizontal-list-swiper/sly}}
  </div>

</div>
